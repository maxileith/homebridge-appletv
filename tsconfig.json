{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src/", "eslint.config.mjs"],
    "exclude": ["**/*.spec.ts"]
}
